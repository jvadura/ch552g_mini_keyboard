<Window x:Class="CH552G_PadConfig_Win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CH552G_PadConfig_Win"
        mc:Ignorable="d"
        Title="CH552G Keyboard Configurator"
        Height="800" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FFCCCCCC"/>
                    <Setter Property="Foreground" Value="#FF666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Background" Value="#FF5C5C5C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF404040"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="CH552G Keyboard Configurator"
                           FontSize="20" FontWeight="Bold"
                           Foreground="#FF0078D4"/>
                <TextBlock Name="StatusTextBlock" Text="{Binding StatusText}"
                           FontSize="12" Foreground="#FF666666"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <Button Grid.Column="1" Content="🔄 Refresh Device"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding RefreshDeviceCommand}"
                    Width="140"/>
        </Grid>

        <!-- Profile Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="📁 Load Profile"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding LoadProfileCommand}"
                    Width="130" Margin="0,0,10,0"/>
            <Button Content="💾 Save Profile"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding SaveProfileCommand}"
                    Width="130" Margin="0,0,10,0"/>
            <Button Content="💾 Save As..."
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding SaveAsProfileCommand}"
                    Width="130" Margin="0,0,10,0"/>
            <Button Content="🔄 Reset to Defaults"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding ResetToDefaultsCommand}"
                    Width="150"/>
        </StackPanel>

        <!-- Slot Tabs and Configuration -->
        <TabControl Grid.Row="2" Name="SlotTabControl"
                    ItemsSource="{Binding Slots}"
                    SelectedIndex="{Binding SelectedSlotIndex}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <!-- Slot Name -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Slot Name:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0" FontWeight="SemiBold"/>
                                <TextBox Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="14" Padding="5"/>
                            </Grid>

                            <!-- Actions List -->
                            <ItemsControl ItemsSource="{Binding Actions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#FFCCCCCC" BorderThickness="1"
                                                CornerRadius="4" Padding="12" Margin="0,0,0,10"
                                                Background="#FFF9F9F9">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding InputName}"
                                                           FontWeight="Bold" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Description}"
                                                           VerticalAlignment="Center" Margin="10,0"/>

                                                <!-- Idle Color -->
                                                <Border Grid.Column="2" Width="30" Height="30"
                                                        Background="{Binding IdleColorBrush}"
                                                        BorderBrush="#FF666666" BorderThickness="1"
                                                        CornerRadius="15" ToolTip="Idle Color"/>

                                                <!-- Active Color -->
                                                <Border Grid.Column="3" Width="30" Height="30"
                                                        Background="{Binding ActiveColorBrush}"
                                                        BorderBrush="#FF666666" BorderThickness="1"
                                                        CornerRadius="15" ToolTip="Active Color"/>

                                                <Button Grid.Column="4" Content="Edit"
                                                        Style="{StaticResource SecondaryButton}"
                                                        Width="80" Margin="10,0,0,0"
                                                        Click="EditAction_Click" Tag="{Binding}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- LED Brightness and Apply -->
        <Grid Grid.Row="3" Margin="0,15,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="LED Brightness:"
                       VerticalAlignment="Center" FontWeight="SemiBold"
                       Margin="0,0,10,0"/>
            <Slider Grid.Column="1" Minimum="0" Maximum="255"
                    Value="{Binding LedBrightness}"
                    TickFrequency="25" IsSnapToTickEnabled="True"
                    VerticalAlignment="Center"/>
            <TextBlock Grid.Column="2" Text="{Binding LedBrightnessPercent, StringFormat={}{0}%}"
                       VerticalAlignment="Center" Width="40"
                       Margin="10,0" FontWeight="Bold"/>

            <Button Grid.Column="4" Content="✓ Apply to Device"
                    Style="{StaticResource RoundedButton}"
                    Command="{Binding ApplyToDeviceCommand}"
                    Width="150" Margin="0,0,10,0"/>
            <Button Grid.Column="5" Content="⚙ Set Active Slot"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding SetActiveSlotCommand}"
                    Width="140"/>
        </Grid>

        <!-- Status Log -->
        <GroupBox Grid.Row="4" Header="Status Log" Margin="0,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox Name="StatusLogTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="11"
                         Background="#FF2B2B2B"
                         Foreground="#FFCCCCCC"
                         BorderThickness="0"
                         Padding="5"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
